.text-box
  border-radius: 10px
  background-color: $theme-gray

.ui
  font-size: .9rem
  padding: .1rem .25rem
  border-radius: 2px
  box-shadow: 1px 2px 4px rgba(0, 0, 0, .05)

  &.ui-button,
  &.ui-value
    border: 1px solid rgba(0, 0, 0, .2)

  &.ui-value
    border-radius: 10px

.table-spacer
  min-width: 300px
  &.sm
    min-width: 150px
