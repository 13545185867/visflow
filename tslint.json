{
  "defaultSeverity": "warning",
  "extends": [
    "tslint:recommended",
    "tslint-no-unused-expression-chai"
  ],
  "linterOptions": {
    "exclude": [
      "node_modules/**",
      "server/**"
    ]
  },
  "rules": {
    "arrow-parens": false,
    "variable-name": [true, "check-format", "ban-keywords", "allow-pascal-case", "allow-trailing-underscore"],
    "indent": [true, "spaces", 2],
    "interface-name": false,
    "max-line-length": [true, 120],
    "no-any": true,
    "no-empty": false,
    "no-consecutive-blank-lines": false,
    "no-console": [true, "debug", "info", "time", "timeEnd", "trace"],
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "quotemark": [true, "single"],
    "trailing-comma": [true, {"multiline": "always", "singleline": "never"}],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-module",
      "check-operator",
      "check-separator",
      "check-type",
      "check-typecast"
    ]
  },
  "env": {
    "browser": true,
    "jquery": true
  }
}
